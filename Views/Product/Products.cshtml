@model Product
<h1 style="text-align: center"><a href="/">Products</a> | <a href="/categories">Categories</a></h1><br><br>
<div class="leftside">
    <h3 style="text-align: center">New Product</h3><br><br>
        <div style="width: 50%; margin-left: auto; margin-right: auto;">
            <form action="createproduct" method="post" class="form-group">
                <label>Name</label><br>
                <input type="text" name="Name" class="form-control" />
                <label>Description</label><br>
                <input type="text" name="Description" class="form-control"/>
                <label>Price</label><br>
                <input type="double" name="Price" class="form-control"/><br><br>
                <input type="submit" value="Create" class="btn btn-info"/>
            </form> 
        </div>
</div>
<div class="vl"></div>
<div class="rightside">
    <h3 style="text-align: center">Existing Products</h3><br><br>
        <div style="width: 50%; margin-left: auto; margin-right: auto;">
            <ul>
                @foreach(var pp in ViewBag.p)
                {
                    <button type="button" style="text-align: center" class="list-group-item list-group-item-action"><a href="/products/@pp.ProductId">@pp.Name</a></button>
                }

            </ul>
        </div>
</div>